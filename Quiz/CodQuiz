# APRESENTAÇÃO

print('''        \033[1;36;40m                               Olá Seja Bem Vindo(a) ao Game Quiz da Texuga Do Mel!
         Teste seu conhecimento sobre o mundo de Harry Potter em 10 perguntas de múltipla escolha. Será que você consegue?
          \033[1;31m ===Digite apenas letras===\033[m ''')
answer_user = input('\033[4;36m EU JURO SOLENEMENTE NÃO FAZER NADA DE BOM. (s/n:)\033[m \n ').strip()
if answer_user != 's':
    print("Obrigado por participar")
    quit()

score = 0

print('\033[7;36;41m Vamos a questão de número 1:\033[m \n ')

# PRIMEIRA QUESTÃO

print('\033[1;35m Qual o mascote que reprensenta a casa da Lufa-Lufa? \n '
      '(A) Leão Marinho \n (B) Texugo \n (C) Leão\033[m ')

answer_user1 = input('\033[1;36m A resposta é ?\033[m \n ').strip()
answer_user1 = answer_user1.upper()
if answer_user1 == 'B':
    print('\033[1;34m Está correto!\033[m \n')
    score = score + 1
else:
    print('\033[1;31m Você errou. Essa tava facíl, hein?\033[m')
##################################################################################################
# SEGUNDA QUESTÃO

print('\033[7;36;41m Questão de número 2:\033[m \n')
print('\033[1;35m Qual foi a primeira relíquia da Morte que Rony Wesley usou? \n '
      '(A) Varinha das Varinhas \n (B) Espada de '
      'Gryffindor \n '
      '(C) Capa da Invisibilidade \033[m')

answer_user2 = input('\033[1;36m Que resposta você daria ?\033[m \n').strip()
answer_user2 = answer_user2.upper()
if answer_user2 == 'C':
    print('\033[1;34m Acertou!\033[m  \n')
    score = score + 1
else:
    print('\033[1;31m Errado!\033[m \n')
################################################################################################

# TERCEIRA QUESTÃO

print('\033[7;36;41m Questão de número 3:\033[m \n')
